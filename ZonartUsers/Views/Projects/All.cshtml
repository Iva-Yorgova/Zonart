                <span class="description"><img src="../Images/png/pen-tool.png" style="color:white; width:30px; padding-bottom:12px" alt="Alternate Text" /><br />Logos</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Projects" asp-action="Books" style="display: block; height: 100%;">
                <img src="../Images/projects/books/book-design.jpg" alt="" style="display: block;height: 100%;max-width: 100%;width: 100%;object-fit: cover;">
                <span class="description">Books</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Projects" asp-action="Posters" style="display: block; height: 100%;">
                <img src="../Images/projects/posters/poster-design.jpg" alt="" style="display: block;height: 100%;max-width: 100%;width: 100%;object-fit: cover;">
                <span class="description">Posters</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Projects" asp-action="Kids" style="display: block; height: 100%;">
                <img src="../Images/projects/kids/kids-design.jpg" alt="" style="display: block;height: 100%;max-width: 100%;width: 100%;object-fit: cover;">
                <span class="description">Kids</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Projects" asp-action="Web" style="display: block; height: 100%;">
                <img src="../Images/projects/web/web-design.jpg" alt="" style="display: block;height: 100%;max-width: 100%;width: 100%;object-fit: cover;">
                <span class="description">Web</span>
            </a>
        </li>

        <li>
            <a asp-area="" asp-controller="Projects" asp-action="Stationary" style="display: block; height: 100%;">
                <img src="../Images/projects/stationary/stationary-design.jpg" alt="" style="display: block;height: 100%;max-width: 100%;width: 100%;object-fit: cover;">
