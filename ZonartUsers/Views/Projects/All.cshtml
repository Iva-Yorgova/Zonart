
@{
    ViewData["Title"] = "Projects";
}


<div class="hover-direction-gallery" style="margin-top:80px">

    <ul class="grid">
        <li>
            <a asp-area="" asp-controller="Projects" asp-action="Brochures" style="display: block; height: 100%;">
                <img src="../Images/projects/brochures/brochure-design.jpg" alt="" style="display: block;height: 100%;max-width: 100%;width: 100%;object-fit: cover;">
                <span class="description" style="margin:auto">Brochures</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Projects" asp-action="Logos" style="display: block; height: 100%;">
