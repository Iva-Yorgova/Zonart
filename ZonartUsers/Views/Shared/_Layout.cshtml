@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Zonart @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="/Images/favicon.ico" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/font-awesome.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@1,500&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/lightbox.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script src="https://kit.fontawesome.com/68a5303305.js" crossorigin="anonymous"></script>

</head>

<body>
    <header>

        <div class="topnav" id="hidingnavbar">
            <a asp-area="" asp-controller="Home" asp-action="Index" id="home">
                <i class="fa fa-home fa-sm active" style="color: white"></i>
            </a>
            <a asp-area="" asp-controller="Projects" asp-action="All" id="projects">Projects</a>
            <a asp-area="" asp-controller="Categories" asp-action="All" id="categories">Categories</a>
            <a asp-area="" asp-controller="Templates" asp-action="All" id="templates">Templates</a>
            <a asp-area="" asp-controller="About" asp-action="OurStory" id="about">About</a>
            <a asp-area="" asp-controller="Contact" asp-action="Add" id="contact">Contact</a>


            <div class="nav-right">

                <a href="#"><i class="fa fa-search fa-sm"></i></a>

                <a href="#"><i class="fas fa-shopping-bag fa-sm"></i></a>
                @if (SignInManager.IsSignedIn(User))
                {
                    <a style="font-weight:200" asp-area="">@User.Identity.Name</a>

                    <a style="font-weight:200" asp-area="" asp-controller="Users" asp-action="Logout" id="login">Logout</a>
                }
                else
                {
                    <a style="font-weight:200" asp-area="" asp-controller="Users" asp-action="Register" id="register">Register</a>

                    <a style="font-weight:200" asp-area="" asp-controller="Users" asp-action="Login" id="login">Login</a>
                }
                <!--<partial name="_LoginPartial" />-->
            </div>
        </div>



    </header>


    <div class="container-fluid-new" style="padding-left: 0px; padding-right: 0px">

        @RenderBody()

    </div>


    <footer class="border-top footer text-muted">
        <div class="horisontal-footer position-relative text-center pt-5 pb-5 text-white">

            <div class="nav-right" style="float: none; margin-top: -25px; margin-bottom: 20px">
                <a href="#"><i class="fa fa-instagram fa-sm" style="color: white; margin-right: 20px"></i></a>
                <a href="#"><i class="fa fa-twitter fa-sm" style="color: white; margin-right: 20px"></i></a>
                <a href="#"><i class="fa fa-behance fa-sm" style="color: white"></i></a>
            </div>

            <div class="bottom-text-footer">
                Copyright Zonart  &copy; @DateTime.UtcNow.Year. All rights reserved.
            </div>


        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


    <script>
        var prevScrollpos = window.pageYOffset;
        window.onscroll = function () {
            var currentScrollPos = window.pageYOffset;
            if (prevScrollpos > currentScrollPos) {
                document.getElementById("hidingnavbar").style.top = "0";
            } else {
                document.getElementById("hidingnavbar").style.top = "-50px";
            }
            prevScrollpos = currentScrollPos;
        }
    </script>

</body>
</html>
