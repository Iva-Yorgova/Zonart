    <script src="~/lib/jquery/dist/jquery.js/jquery.visible.js"></script>
    <script src="~/lib/jquery/dist/jquery.js/jquery.visible.js/jquery.visible.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)




    <script>
        var prevScrollpos = window.pageYOffset;
        window.onscroll = function () {
            var currentScrollPos = window.pageYOffset;
            if (prevScrollpos > currentScrollPos) {
                document.getElementById("hidingnavbar").style.top = "0";
            } else {
                document.getElementById("hidingnavbar").style.top = "-50px";
            }
            prevScrollpos = currentScrollPos;
        }
    </script>

</body>
</html>
